<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MerchantTestActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_add_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;add registration idle&gt;"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <EditText
          android:layout_width="256dp"
          android:layout_height="wrap_content"
          android:id="@+id/edit_register"
          android:hint="URI"
          android:editable="true"
          android:singleLine="true"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Register URI"
          android:id="@+id/button_register"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_get_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;get registrations idle&gt;"/>

    <TextView
        android:id="@+id/text_get_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Get Registrations"
          android:id="@+id/button_get"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <EditText
          android:layout_width="256dp"
          android:layout_height="wrap_content"
          android:id="@+id/edit_print"
          android:hint="Order ID"
          android:editable="true"
          android:singleLine="true"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical">

      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Print Order"
          android:id="@+id/button_print"
          android:layout_gravity="left|center_vertical"/>

    </LinearLayout>
  </LinearLayout>


</ScrollView>
